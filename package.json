  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "deploy:fund": "yarn deploy:fund:base && yarn deploy:fund:mantle && yarn deploy:fund:scroll",
    "deploy:fund:base": "hardhat ignition deploy ./ignition/modules/MockTreasuryFactory.ts --network base",
    "deploy:fund:mantle": "hardhat ignition deploy ./ignition/modules/MockTreasuryFactory.ts --network mantle",
    "deploy:fund:scroll": "hardhat ignition deploy ./ignition/modules/MockTreasuryFactory.ts --network scroll",
    "deploy:usd": "yarn deploy:usd:base && yarn deploy:usd:mantle && yarn deploy:usd:scroll",
    "deploy:usd:base": "hardhat ignition deploy ./ignition/modules/MockERC20.ts --network base",
    "deploy:usd:mantle": "hardhat ignition deploy ./ignition/modules/MockERC20.ts --network mantle",
    "deploy:usd:scroll": "hardhat ignition deploy ./ignition/modules/MockERC20.ts --network scroll",
    "deploy:frt": "hardhat ignition deploy ./ignition/modules/FractionalRealty.ts --network kinto"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.15",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  }
}
